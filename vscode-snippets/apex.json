{
	// Place your snippets for apex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Private Static Final" : {
		"prefix" : ["privstafin"],
		"body" : ["private static final "]
	},
	"Public Static Final" : {
		"prefix" : ["pubstafin"],
		"body" : ["public static final "]
	},
	"Empty List Declaration" : {
		"prefix" : ["alist"],
		"body" : ["List<$1> $2 = new List<$1>();"]
	},
	"Array-Initialized List Declaration" : {
		"prefix" : ["alist-arrinit"],
		"body" : ["List<$1> $2 = new List<$1>{$0};"]
	},
	"Empty Map Declaration" : {
		"prefix" : ["amap"],
		"body" : ["Map<$1, $2> $3 = new Map<$1, $2>();"]
	},
	"Array-Initialized Map Declaration" : {
		"prefix" : ["amap-arrinit"],
		"body" : ["Map<$1, $2> $3 = new Map<$1, $2>{$0};"]
	},
	"Debug" : {
		"prefix" : ["debug"],
		"body" : ["System.debug($0);"]
	},
	"Assert Equals" : {
		"prefix" : ["aequals"],
		"body" : ["System.assertEquals($1, $2);"]
	},
	"List Method Declaration" : {
		"prefix" : ["methlist"],
		"body" : [
			"${1:private} ${2:static} List<${3:Object}> ${4:methodName}(${5:args}) {",
			"\t$0",
			"}\n"
		]
	},
	"Math Method Declaration" : {
		"prefix" : ["methmap"],
		"body" : [
			"${1:private} ${2:static} Map<${3:Object}, ${4:Object}> ${5:methodName}(${6:args}) {",
			"\t$0",
			"}\n"
		]
	}
}